

<div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @event.title %></h2>
      <i class="fas fa-plus"></i>
      <i class="fas fa-lightbulb"></i>
      <p><%= @event.description %></p>
    </div>
    <h2 class="card-trip-date"><%= @event.date %></h2>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
  </div>
</div>
<%= render "categories/category_form", event: @event, category: @category %>

<%if @categories %>
  <% @categories.each do |category| %>
    <%= category.name %>
    <%= render "suggestions/suggestion_form", event: @event, category: category, suggestion: @suggestion %>
    <% category.suggestions.each do |suggestion| %>
      <%= suggestion.name %>
    <% end %>
  <% end %>
<%end %>


<%= render "members/member_form", event: @event, member:@member %>
<%= console %>
