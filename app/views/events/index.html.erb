<div class="index-top">
</div>

<div class="index-header">
  <h1>Here are your upcoming events</h1>
</div>

<div class="card-container">
  <% @events.each do |event| %>
    <%= link_to event_path(event), class: "text-decoration-none" do %>
      <div class="game col-2">
        <div class="rank"><%= event.id %></div>
        <div class="front" >
          <% if event.photo.attached? %>
            <%= cl_image_tag event.photo.key, height: 90, width: 120, crop: :fill %>
          <% else %>
            <img src="https://picsum.photos/200/150" alt="game">
          <% end %>
          <h3 class="name"><%= event.title %></h3>
          <div class="status">
            <p class="viewers"><%= event.date %></p>
            <div class="streamers">
              <% event.members[0..2].each do |member| %>
                <%= cl_image_tag member.user.photo.key %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
