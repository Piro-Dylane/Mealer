<div class="container col-5 pt-5">
  <h1 class="mt-5 pt-6"> <%= @chatroom.event.title %></h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message%>
    <% end %>
  </div>

  <%= simple_form_for [@event, @chatroom, @message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Message #{@chatroom.event.title}" %>
    <%= f.submit "Add message", class: 'btn btn-success'%>
  <% end %>
</div>
