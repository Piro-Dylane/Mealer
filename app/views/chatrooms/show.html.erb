<div class="container col-8">
<div class="message-box-container">
<div class="event-container pt-3">
  <h1 class="mt-5"><%= @chatroom.event.title %> <img class="fruit-icon" src="https://img.icons8.com/color/48/000000/hamper.png" alt="icon of a fruit basket"/> </h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message%>
    <% end %>
    </div>
    </div>


  <%= simple_form_for [@event, @chatroom, @message ], remote: true do |f| %>
  <div class="d-flex">
       <%= f.input :content, label: false, placeholder: "Write #{@chatroom.event.title}" %>
       <%= button_tag type: 'submit', class: "button postfix" do %>
      <i class="fas fa-paper-plane" aria-hidden="true"></i>
    <% end %>
  </div>
<% end %>
</div>
</div>

<div class="return-arrow-category">
    <%= link_to events_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
</div>
