<div class="message-container" id="message md-2"-<%= message.id %>>
  <i class="author">
    <div class="author-event">
      <% if @chatroom.messages.where(user: current_user).include? message%>
          <div class="message-answer-orange">
              <strong><%= message.content %></strong>
              <% if message.user.photo.attached? %>
                <%= cl_image_tag message.user.photo.key, class:"avatar" %>
              <% end %>
           </div>
        <% else %>
            <div class="message-answer-blue">
              <% if message.user.photo.attached? %>
                <%= cl_image_tag message.user.photo.key, class:"avatar" %>
              <% end %>
              <strong> <%= message.content %></strong>
            </div>
      <% end %>
    <p class='messageinfo'> <%= message.user.username  %><%= message.created_at.strftime(" le %e %b a: %l:%M%p") %></p>
  </i>
</div>
